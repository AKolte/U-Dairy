<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.kolte.testproject.MilkStock">

    <Button
        android:id="@+id/editPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="31dp"
        android:text="Edit Price"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/results_listview"
        android:layout_width="match_parent"
        android:layout_height="465dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/editPrice" />

    <Spinner
        android:id="@+id/milk"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="37dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/results_listview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newPrice"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="36dp"
        android:hint="New Price"
        android:inputType="numberDecimal"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/editPrice"
        app:layout_constraintStart_toEndOf="@+id/milk"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/ep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="1dp"
        android:text="Edit Price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>